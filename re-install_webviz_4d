#!/bin/bash 
#set -x

if [ -d "venv" ]; then 
    rm -rf venv 
fi

source /prog/res/komodo/2024.06.10-py311/enable

python -m venv venv
source ./venv/bin/activate

echo "Installing all necessary packages ..."

pip install --upgrade pip
pip install -r requirements.txt
pip install black
pip install pylint
pip install pytest
pip install -e .

echo "WebViz-4D installation completed, virtual environment: venv"

